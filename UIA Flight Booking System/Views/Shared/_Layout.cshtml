<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UIA Flight Booking System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top: 0px;">

    <nav class="navbar navbar-inverse" style="border-radius: 0px; margin-bottom: 0px;">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand">Ukraine International Airline</a>
            </div>

            <ul class="nav navbar-nav">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li><a href=@Url.Action("Index", "Home")>Home</a></li>
                    <li><a href=@Url.Action("Contact", "Home")>Contact</a></li>
                    <li><a href=@Url.Action("About", "Home")>About</a></li>
                    <li><a href=@Url.Action("CustomerRegistration", "Account")>Register</a></li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href=@Url.Action("Home", "Customer")>Home</a></li>
                    <li><a href=@Url.Action("SearchFlights", "Customer")>Search Flights</a></li>
                    <li><a href=@Url.Action("ViewMyReservations", "Customer")>View My Reservations</a></li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> @(User.Identity.IsAuthenticated ? HttpContext.Current.User.Identity.Name.Split('|')[0] : "Guest")</a></li>
                    <li><a href=@Url.Action("SignOut", "Account")><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                }
                @if (!User.Identity.IsAuthenticated)
                {
                    <li><a href=@Url.Action("Login","Account")><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                }
            </ul>
        </div>
    </nav>

    @RenderBody()


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
